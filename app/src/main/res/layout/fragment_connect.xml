<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:background="@color/theme">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter a name for your device"
        android:textColor="@color/text"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/bg_input"
        android:gravity="center"
        android:maxLength="50"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/themeDarkDark"
        android:textSize="16dp"
        tools:text="123456789012345678901234567890" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Change Device Picture"
        android:textColor="@color/text"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/header"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/border_dark"
        android:padding="2dp"
        android:scaleType="centerCrop"
        tools:src="@mipmap/ic_default_header" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/connect"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bg_btn"
            android:gravity="center"
            android:text="Connect"
            android:textColor="@color/text_press"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/back"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_btn"
            android:gravity="center"
            android:text="Back"
            android:textColor="@color/text_press"
            android:textSize="14dp" />

    </LinearLayout>

</LinearLayout>