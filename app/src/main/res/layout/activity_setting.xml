<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:titleTextColor="@color/text" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/header"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/border_dark"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    tools:src="@mipmap/ic_default_header" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:textColor="@color/text"
                    android:textSize="20dp"
                    tools:text="sdfsssssssssssssssssssdf" />

                <TextView
                    android:id="@+id/rename"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="0dp"
                    android:background="@drawable/bg_btn"
                    android:gravity="center"
                    android:text="Rename"
                    android:textColor="@color/text_press"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/time_format_tag"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:background="@drawable/bg_btn"
                    android:gravity="center"
                    android:text="Time Format"
                    android:textColor="@color/text_press"
                    android:textSize="14dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="2" />

                <TextView
                    android:id="@+id/alert_tune_tag"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:background="@drawable/bg_btn"
                    android:gravity="center"
                    android:text="Alert Tune"
                    android:textColor="@color/text_press"
                    android:textSize="14dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="2" />

                <TextView
                    android:id="@+id/notification_tag"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:background="@drawable/bg_btn"
                    android:gravity="center"
                    android:text="Notification"
                    android:textColor="@color/text_press"
                    android:textSize="14dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/time_format"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/text"
                    android:textSize="16dp"
                    tools:text="sdfsf" />

                <TextView
                    android:id="@+id/alert_tune"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/text"
                    android:textSize="16dp"
                    tools:text="sdfsf" />

                <TextView
                    android:id="@+id/notification"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/text"
                    android:textSize="16dp"
                    tools:text="sdfsf" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp"
                        android:text="OFF"
                        android:textColor="@color/text"
                        android:textSize="12dp" />

                    <CheckBox
                        android:id="@+id/g_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_toEndOf="@id/tv_2"
                        android:background="@drawable/bg_on_off"
                        android:button="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="15dp"
                        android:layout_toEndOf="@id/g_switch"
                        android:text="ON"
                        android:textColor="@color/text"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/g_switch"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="Shake Detection (G)"
                        android:textColor="@color/text"
                        android:textSize="12dp" />

                </RelativeLayout>

                <SeekBar
                    android:id="@+id/g_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="252"
                    android:maxHeight="3dp"
                    android:minHeight="3dp"
                    android:progressDrawable="@drawable/seekbar"
                    android:thumb="@drawable/thumb"
                    tools:progress="252" />

                <TextView
                    android:id="@+id/g"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text"
                    android:textSize="12dp"
                    tools:text="252" />

                <TextView
                    android:id="@+id/save_g"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bg_btn"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Save"
                    android:textColor="@color/text_press"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp"
                        android:text="OFF"
                        android:textColor="@color/text"
                        android:textSize="12dp" />

                    <CheckBox
                        android:id="@+id/xyz_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_toEndOf="@id/tv_3"
                        android:background="@drawable/bg_on_off"
                        android:button="@null"
                        tools:checked="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="15dp"
                        android:layout_toEndOf="@id/xyz_switch"
                        android:text="ON"
                        android:textColor="@color/text"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/xyz_switch"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="Flip Detection (XYZ)"
                        android:textColor="@color/text"
                        android:textSize="12dp" />

                </RelativeLayout>

                <!--<SeekBar-->
                    <!--android:id="@+id/xyz_value"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1"-->
                    <!--android:max="245"-->
                    <!--android:maxHeight="3dp"-->
                    <!--android:minHeight="3dp"-->
                    <!--android:progressDrawable="@drawable/seekbar"-->
                    <!--android:thumb="@drawable/thumb"-->
                    <!--tools:progress="100" />-->

                <!--<TextView-->
                    <!--android:id="@+id/xyz"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textColor="@color/text"-->
                    <!--android:textSize="12dp"-->
                    <!--tools:text="255" />-->

                <!--<TextView-->
                    <!--android:id="@+id/save_xyz"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginStart="10dp"-->
                    <!--android:layout_marginEnd="15dp"-->
                    <!--android:background="@drawable/bg_btn"-->
                    <!--android:gravity="center"-->
                    <!--android:paddingStart="10dp"-->
                    <!--android:paddingEnd="10dp"-->
                    <!--android:text="Save"-->
                    <!--android:textColor="@color/text_press"-->
                    <!--android:textSize="14dp" />-->

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/themeLight" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:text="Default Show:"
                    android:textColor="@color/text"
                    android:textSize="14dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/themeLight" />

                <RadioButton
                    android:id="@+id/hour"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Hour"
                    android:textColor="@color/text_check"
                    android:textSize="16dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/themeLight" />

                <RadioButton
                    android:id="@+id/day"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Day"
                    android:textColor="@color/text_check"
                    android:textSize="16dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/themeLight" />

                <RadioButton
                    android:id="@+id/month"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Month"
                    android:textColor="@color/text_check"
                    android:textSize="16dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/themeLight" />

                <RadioButton
                    android:id="@+id/year"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Year"
                    android:textColor="@color/text_check"
                    android:textSize="16dp" />

            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/themeLight" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/find"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/bg_btn"
                    android:gravity="center"
                    android:text="Find"
                    android:textColor="@color/text_press"
                    android:textSize="14dp" />

                <CheckBox
                    android:id="@+id/alert_on_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_on_off"
                    android:button="@null" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@id/alert_on_off"
                    android:text="OFF"
                    android:textColor="@color/text"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/alert_on_off"
                    android:text="ON"
                    android:textColor="@color/text"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/alert_on_off"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="DEVICE ALERT"
                    android:textColor="@color/text"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/un_pair"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bg_btn"
                    android:gravity="center"
                    android:text="Unpair"
                    android:textColor="@color/text_press"
                    android:textSize="14dp" />

            </RelativeLayout>

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_tag"
                android:gravity="center"
                android:text="Data"
                android:textColor="@color/text"
                android:textSize="14dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Start"
                    android:textColor="@color/text"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_1"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:text="End"
                    android:textColor="@color/text"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/download"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bg_btn"
                    android:gravity="center"
                    android:text="Download"
                    android:textColor="@color/text_press"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/date_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/text"
                    android:textSize="16dp"
                    tools:text="2012/12/12" />

                <TextView
                    android:id="@+id/date_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/date_start"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/text"
                    android:textSize="16dp"
                    tools:text="2012/12/12" />

            </RelativeLayout>

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_tag"
                android:gravity="center"
                android:text="Last GPS"
                android:textColor="@color/text"
                android:textSize="14dp" />

            <com.viseeointernational.stop.view.custom.ScrollViewListView
                android:id="@+id/lv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>